{
	"compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
		"noEmitOnError": true,
		"removeComments": false,
		"noImplicitReturns": true,
		"pretty": true,
		"sourceMap": true,
		"target": "es6",
		"experimentalDecorators": true,
		"module": "commonjs",
		"watch": true
	},
	"exclude": [
		"node_modules"
	]
}
